<body>
    Hello word Admin
    <script type='text/javascript' src="js/socket.io/4.6.0/socket.io.min.js"></script>
    <script>
        const socket = io(`/admin`);
        
        socket.on('connect_failed', function(){
            alert('Connection failed');
        });

        socket.on('error', function(){
            alert('Something went wrong');
        });

        socket.on('reconnect_failed', function(){
            alert('Reconnection failed');
        });

        socket.on('connectedRoom', function(data){
            console.log(123);
            document.write(`<p>${data}</p>`);
        });

        socket.on('myCustomEvent', function(data){
            document.write(`<p>${data.description}</p>`);
        });
    </script>
</body>

</html>