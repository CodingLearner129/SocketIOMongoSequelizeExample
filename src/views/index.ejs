    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hello word</title>
</head>

<body>
    Hello word
    <script type='text/javascript' src="js/socket.io/4.6.0/socket.io.min.js"></script>
    <!-- <script type='text/javascript' src="js/socket.io/3.1.3/socket.io.min.js"></script> -->
    <!-- <script type='text/javascript' src="js/socket.io/2.3.0/socket.io.js"></script> -->
    <script type="module">
        // import { io } from "socket.io-client";
        // import { io } from "./node_modules/socket.io-client/dist/socket.io.js";
        // const socket = io(`http://localhost:3030`);
        const socket = io(`/`);
        // const url = `http://localhost:3000/`;
        // const socket = io(url, {path: '/', query: `sid=X4zy3lQSOVM-PsO9AAAB`});

        socket.on('message', function(data){
            document.write(`<p>${data}</p>`);
        });

        socket.on('myCustomEvent', function(data){
            document.write(`<p>${data.description}</p>`);
        });

        socket.emit('myCustomEventClientSide', {description: `"myCustomEventClientSide" Sent message from server side by pre-reserved events`});

        socket.on('broadcast', function(data){
            document.body.innerHTML = '';
            document.write(`<p>${data.message}</p>`)
        });

        socket.on('newUserConnect', function(data){
            document.body.innerHTML = '';
            document.write(`<p>${data.message}</p>`)
        });
    </script>
</body>

</html>